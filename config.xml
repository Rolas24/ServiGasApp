<?xml version='1.0' encoding='utf-8'?>
<widget id="com.rolas.servigasapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ServiGasApp</name>
    <description>
        Aplicaci√≥n para solicitar gas y aplicar promociones.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Josue Rolando Flores Cortes
    </author>
    <content src="index.html" />
    <access origin="*" />
    <access origin="whatsapp:*" launch-external="yes" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />

        <!-- you can use any density that exists in the Android project 
        <splash src="img/splash/splash-port-hdpi.png" density="land-hdpi"/>
        <splash src="img/splash/splash-port-ldpi.png" density="land-ldpi"/>
        <splash src="img/splash/splash-port-mdpi.png" density="land-mdpi"/>
        <splash src="img/splash/splash-port-xhdpi.png" density="land-xhdpi"/>

        <splash src="img/splash/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="img/splash/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="img/splash/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="img/splash/splash-port-xhdpi.png" density="port-xhdpi"/>-->

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <!--<plugin name="cordova-plugin-splashscreen" source="npm" />-->
</widget>
